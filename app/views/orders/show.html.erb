<p><%= link_to "All Orders", orders_path %></p>
<p>Order #: <%= @order.id %> (<%= @order.status %>)</p>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Sub-Total</th>
      <th>State</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |item| %>
      <% @product = item.selected_product %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <p><%= @product.title %></p>
          <p><%= image_tag @product.image.variant(resize: "100x100") if @product.image.attached? %></p>
        </td>
        <td><%= @product.ingredients %></td>
        <td>$ <%= @product.price %></td>
        <td><%= item.quantity %></td>
        <td>$ <%= item.quantity * @product.price %></td>
        <td><%= item.state %></td>
        <td><%= link_to 'Remove Item', item, method: :delete, data: { confirm: 'Are you sure?' } if @order_items.count > 0 && @order.open? %></td>
      </tr>
    <% end %>
      <tr>
        <td colspan="5"></td>
        <td>$ <%= @order.total %></td>
        <% if @order.open? %>
          <td><%= link_to "Pay", pay_order_path if @order_items.count > 0 %></td>
          <td><%= link_to 'Reset Order', @order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td colspan="2"><%= link_to 'New Order', new_order_path %></td>
        <% end %>
      </tr>
  </tbody>
</table>
<!--p><%= link_to "Send to Kitchen", send_to_kitchen_order_path if @order_items.count > 0 && @order.open? %></p-->

<hr>

<p>
  <strong>You are now viewing the menu for: </strong>
  <%= @restaurant_name %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Available</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <p><%= product.title %></p>
          <p><%= image_tag product.image.variant(resize: "100x100") if product.image.attached? %></p>
        </td>
        <td>
          <p><%= product.description %></p>
          <p><em><%= product.ingredients %></em></p>
        </td>
        <td>$ <%= product.price %></td>
        <td><%= product.available %></td>
        <td>
          <%= form_tag url_for(:controller => 'order_items', :action => 'create'), :method => 'post' do %>
            <%= hidden_field_tag :product_id, product.id %>
            <%= hidden_field_tag :kitchen_id, product.kitchen.id %>
            <%= hidden_field_tag :order_id, @order.id %>
            <%= hidden_field_tag :quantity, 1 %>
            <%= submit_tag "Add to Order" if @order.open? && product.available? %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
