<h1>Orders</h1>

<% if !@orders.nil? && @orders.count > 0 %>
  <table>
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= distance_of_time_in_words(Time.now, order.updated_at) %></td>
            <td><b><%= order.status %></b></td>
            <td><%= link_to 'Show', order %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  No Recent Orders
<% end %>
<br>

<%= link_to 'New Order', new_order_path if @can_create_new_order %>
